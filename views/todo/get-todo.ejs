<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Get Todo</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4 text-gray-800">Todo Item</h1>
    <button
      onclick="getTodo()"
      class="mb-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
    >
      Get Todo
    </button>

    <div id="todo" class="p-4 border rounded bg-gray-50 text-gray-700 hidden">
      <h2 id="todo-title" class="font-semibold text-lg mb-2"></h2>
      <p id="todo-completed" class="text-sm"></p>
    </div>
  </div>

  <script>
    async function getTodo() {
      try {
        const response = await fetch('https://jsonplaceholder.typicode.com/todos/1');
        const todo = await response.json();

        document.getElementById('todo-title').textContent = todo.title;
        document.getElementById('todo-completed').textContent =
          todo.completed ? "✅ Completed" : "❌ Not Completed";
        document.getElementById('todo').classList.remove('hidden');
      } catch (error) {
        alert("Failed to fetch todo.");
        console.error(error);
      }
    }
  </script>

</body>
</html>
